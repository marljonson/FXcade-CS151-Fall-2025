<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox fx:id="root" xmlns:fx="http://javafx.com/fxml" spacing="20" style="-fx-background-color: #0d1b2a; -fx-padding: 20;">
    <children>

        <Label text="BLACKJACK" style="-fx-text-fill: white; -fx-font-size: 32;" alignment="CENTER" />

        <!-- Dealer Area -->
        <VBox spacing="10">
            <Label text="Dealer" style="-fx-text-fill: white; -fx-font-size: 20;" />
            <HBox fx:id="dealerCards" spacing="10" alignment="CENTER" />
            <Label fx:id="dealerTotalLabel" style="-fx-text-fill: yellow; -fx-font-size: 18;" />
        </VBox>

        <!-- Game Status -->
        <Label fx:id="statusLabel" style="-fx-text-fill: #ff006e; -fx-font-size: 20;" alignment="CENTER" />

        <!-- Players Grid -->
        <GridPane hgap="30" vgap="20">
            <columnConstraints>
                <ColumnConstraints hgrow="ALWAYS" />
                <ColumnConstraints hgrow="ALWAYS" />
                <ColumnConstraints hgrow="ALWAYS" />
            </columnConstraints>

            <!-- Human Player -->
            <VBox alignment="CENTER" GridPane.columnIndex="0">
                <Label text="YOU" style="-fx-text-fill: #38b000;" />
                <HBox fx:id="playerCards" spacing="10" />
                <Label fx:id="playerTotalLabel" style="-fx-text-fill: white;" />
                <Label fx:id="bankrollLabel" style="-fx-text-fill: #38b000; -fx-font-size: 16;" />
            </VBox>

            <!-- Bot 1 -->
            <VBox alignment="CENTER" GridPane.columnIndex="1">
                <Label text="Bot 1" style="-fx-text-fill: #ffba08;" />
                <HBox fx:id="bot1Cards" spacing="10" />
                <Label fx:id="bot1BankLabel" style="-fx-text-fill: #ffba08;" />
            </VBox>

            <!-- Bot 2 -->
            <VBox alignment="CENTER" GridPane.columnIndex="2">
                <Label text="Bot 2" style="-fx-text-fill: #ffba08;" />
                <HBox fx:id="bot2Cards" spacing="10" />
                <Label fx:id="bot2BankLabel" style="-fx-text-fill: #ffba08;" />
            </VBox>
        </GridPane>

        <!-- Controls -->
        <VBox spacing="15" alignment="CENTER">
            <HBox spacing="10" alignment="CENTER">
                <Label text="Bet:" style="-fx-text-fill: white;" />
                <TextField fx:id="betField" text="50" prefWidth="80" />
            </HBox>

            <HBox spacing="20">
                <Button fx:id="hitButton" text="HIT" prefWidth="120" style="-fx-background-color: #38b000;" />
                <Button fx:id="standButton" text="STAND" prefWidth="120" style="-fx-background-color: #e63946;" />
                <Button fx:id="newRoundButton" text="NEW ROUND" prefWidth="150" style="-fx-background-color: #1b263b;" />
            </HBox>

            <HBox spacing="20">
                <Button fx:id="saveButton" text="SAVE GAME" prefWidth="140" />
                <Button fx:id="loadButton" text="LOAD GAME" prefWidth="140" />
            </HBox>

            <Label fx:id="turnLabel" text="Place your bet..." style="-fx-text-fill: #38b000; -fx-font-size: 24;" />
        </VBox>
    </children>
</VBox>